@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home";
}

<div class="container" ng-controller="employeeCtrl">

    <div class="row">
        <div class="col-md-12">
            <h2>
                Employees
            </h2>
            <hr />
        </div>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3>Search</h3>
        </div>

        <div class="panel-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Department</label>
                            <select name="department" class="form-control fieldReqd" ng-model="department">
                                <option value="" ng-show="(departments.length > 1 || departments.length === 0)">- All -</option>
                                <option ng-repeat="department in departments" value="{{ department.Id }}">{{ department.Name }}</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Status</label>
                            <select name="status" class="form-control fieldReqd" ng-model="status">
                                <option value="" ng-show="(statuses.length > 1 || statuses.length === 0)">- All -</option>
                                <option ng-repeat="stat in statuses" value="{{ stat.Id }}">{{ stat.Name }}</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <a class="btn btn-primary" ng-click="fetchEmployees()">Fetch</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-striped table-hover" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>SurName</th>
                                <th>Department</th>
                                <th>Status</th>
                                <th class="text-center"></th>
                            </tr>
                        </thead>
                        <tbody ng-repeat="employee in employees">
                            <tr>
                                <td>{{ employee.Id }}</td>
                                <td>{{ employee.Name }}</td>
                                <td>{{ employee.SurName }}</td>
                                <td>{{ employee.DepartmentName }}</td>
                                <td>{{ employee.StatusName }}</td>
                                <td class="text-center">
                                    <a ng-click="viewEmployee(employee)">
                                        View
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                        <tbody ng-show="employees.length === 0">
                            <tr>
                                <td>
                                    <span>
                                        No records found
                                    </span>
                                </td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row" ng-show="employee">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12 text-right">
                    <h4><a ng-click="closeDetails()">X Close</a></h4>
                </div>
                <div class="col-md-12 text-left">
                    <h2>Employee Details</h2>
                    <hr />
                </div>
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <table class="table table-striped table-hover table-inverse" cellspacing="0">
                        <tbody>
                            <tr>
                                <td>Employee Id</td>
                                <td>{{ employee.Id }}</td>
                            </tr>
                            <tr>
                                <td>Employee Name</td>
                                <td>{{ employee.Name }}</td>
                            </tr>
                            <tr>
                                <td>Employee Surname</td>
                                <td>{{ employee.SurName }}</td>
                            </tr>
                            <tr>
                                <td>Joining Date</td>
                                <td>{{ employee.JoiningDate }}</td>
                            </tr>
                            <tr>
                                <td>Employee Status</td>
                                <td>{{ employee.StatusName }}</td>
                            </tr>
                            <tr>
                                <td>Birth Date</td>
                                <td>{{ employee.BirthDate }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
    </div>

</div>

<!-- Load the scripts after page loads the base scripts like bootstrap, ajs etc... -->
@section scripts {
    @Scripts.Render("~/bundles/ajs-employee")
}